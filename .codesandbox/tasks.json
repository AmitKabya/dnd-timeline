{
  // These tasks will run in order when initializing your CodeSandbox project.
  "setupTasks": [
    {
      "name": "Install Dependencies",
      "command": "npm install"
    }
  ],

  // These tasks can be run from CodeSandbox. Running one will open a log in the app.
  "tasks": {
    "build": {
      "name": "build",
      "command": "npm run build",
      "runAtStart": false
    },
    "clean": {
      "name": "clean",
      "command": "npm run clean",
      "runAtStart": false
    },
    "dev": {
      "name": "dev",
      "command": "npm run dev",
      "runAtStart": true
    },
    "format": {
      "name": "format",
      "command": "npm run format",
      "runAtStart": false
    },
    "lint": {
      "name": "lint",
      "command": "npm run lint",
      "runAtStart": false
    },
    "test": {
      "name": "test",
      "command": "npm run test",
      "runAtStart": false
    },
    "typecheck": {
      "name": "typecheck",
      "command": "npm run typecheck",
      "runAtStart": false
    },
    "changeset": {
      "name": "changeset",
      "command": "npm run changeset",
      "runAtStart": false
    },
    "prepare-packages": {
      "name": "prepare-packages",
      "command": "npm run prepare-packages",
      "runAtStart": false
    },
    "publish-packages": {
      "name": "publish-packages",
      "command": "npm run publish-packages",
      "runAtStart": false
    },
    "prepare": {
      "name": "prepare",
      "command": "npm run prepare",
      "runAtStart": false
    }
  }
}
